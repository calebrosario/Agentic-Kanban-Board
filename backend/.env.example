# Backend Environment Variables
# Copy this file to .env and update with your actual values

# Server Configuration
BACKEND_PORT=8905
NODE_ENV=development

# Database Configuration
DATABASE_PATH=./data/claude-sessions.db

# Authentication Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin
JWT_SECRET=dev-secret-key-change-in-production

# Claude Code CLI Configuration
CLAUDE_EXECUTABLE=claude
CLAUDE_TIMEOUT=300000

# OpenCode CLI Configuration (with oh-my-opencode plugin support)
OPENCODE_EXECUTABLE=opencode
OPENCODE_CONFIG_DIR=~/.config/opencode/
OPENCODE_CONFIG=~/.config/opencode/opencode.json
OPENCODE_MODEL=anthropic/claude-sonnet-4-20250514

# oh-my-opencode Plugin Configuration
# Set to false to disable oh-my-opencode agent orchestration
OH_MY_OPENCODE_ENABLED=true

# Logging Configuration
LOG_LEVEL=info

# Security Configuration
ALLOWED_DIRS=/tmp,/workspace

# Process Configuration
ENABLE_PROCESS_OPTIMIZATIONS=true
PROCESS_STARTUP_DELAY=500
PROCESS_MESSAGE_TIMEOUT=120000
